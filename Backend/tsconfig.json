{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "paths": {
          "@types/*": ["@types/*"]
      }
  },
  "include": [
      "src/**/*",
      "src/types/**/*" 
  ]
}
